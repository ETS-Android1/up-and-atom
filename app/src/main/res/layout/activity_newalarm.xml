<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical"
    tools:context=".AddNewAlarm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        >

        <ImageButton
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_white_36dp"
            android:clickable="true"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/newAlarm"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:textSize="20dp"
            android:background="@color/colorPrimaryDark"
            android:text="New Alarm"
            android:padding="15dp"
            android:paddingStart="75dp"
            android:paddingEnd="75dp" />

        <ImageButton
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_done_white_36dp"
            android:clickable="true"
            android:background="@color/colorPrimaryDark"
            android:cropToPadding="false"
            android:baselineAlignBottom="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="My QR Alarm"
            android:textSize="36dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp"
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/textColorPrimary"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/windowBackground">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/ic_access_time_black_24dp"/>

        <Spinner
            android:id="@+id/chooseTimeSpinner"
            android:layout_width="match_parent"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="44dp"
            android:layout_height="50dp"
            android:spinnerMode="dialog"
            >
        </Spinner>

        <TextView
            android:id="@+id/displayTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="1"
            android:src="@drawable/ic_watch_later_black_24dp"/>

        <Button
            android:id="@+id/timeButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_row="1"
            android:hint="  Time/Location"
            android:textSize="12dp"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="5dp"
            android:singleLine="true"
            android:inputType="time"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_camera_alt_black_24dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@color/windowBackground"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="35dp"
            android:text="   Scan QR Code"
            android:textSize="12dp"
            android:textAlignment="textStart"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_alarm_off_black_24dp"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_marginStart="10dp"
            android:layout_row="3"
            android:layout_marginEnd="40dp"
            android:text=" Alarm Override"
            android:textSize="14dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_music_note_black_24dp"/>

        <Spinner
            android:id="@+id/ringtoneSpinner"
            android:layout_width="match_parent"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="44dp"
            android:layout_height="50dp"
            android:spinnerMode="dialog"
            >
        </Spinner>

    </GridLayout>

</LinearLayout>
