<?xml version="1.0" encoding="utf-8"?>

<!-- This activity represents the users view when creating a new alarm

TODO: overhaul UI to bring it into line with material design.
TODO: implement if alarm repeats, then show days of the week as view objects-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical"
    tools:context=".AddNewAlarm">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:title="Add New Alarm"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp"
            android:hint="My QR Alarm"
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/textColorPrimary"
            android:textSize="36dp" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/windowBackground">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:src="@drawable/ic_access_time_black_24dp" />

        <Spinner
            android:id="@+id/chooseTimeSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_marginEnd="44dp"
            android:layout_marginStart="5dp"
            android:layout_row="0"
            android:spinnerMode="dialog"></Spinner>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="1"
            android:src="@drawable/ic_watch_later_black_24dp" />

        <Button
            android:id="@+id/timeButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="5dp"
            android:layout_row="1"
            android:hint="  Time/Location"
            android:inputType="time"
            android:singleLine="true"
            android:textSize="12dp"
            style="?android:attr/borderlessButtonStyle"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="2"
            android:src="@drawable/ic_camera_alt_black_24dp" />

        <Button
            android:id="@+id/QRButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="5dp"
            android:layout_row="2"
            android:background="@color/windowBackground"
            android:text="   Scan QR Code"
            android:textAlignment="textStart"
            android:textSize="12dp"
            android:clickable="true"
            style="?android:attr/borderlessButtonStyle"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="3"
            android:src="@drawable/ic_alarm_off_black_24dp" />

        <Switch
            android:id="@+id/overrideSwitch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="10dp"
            android:layout_row="3"
            android:text=" Alarm Override"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginTop="5dp"
            android:layout_row="4"
            android:src="@drawable/ic_music_note_black_24dp" />

        <Spinner
            android:id="@+id/ringtoneSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_marginEnd="44dp"
            android:layout_marginStart="5dp"
            android:layout_row="4"
            android:spinnerMode="dialog"></Spinner>

        <TextView
            android:id="@+id/displayTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:text="Alarm set to: "
            android:textSize="30dp" />

        <TextView
            android:id="@+id/QRTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="6"
            android:text="QR set to: "
            android:textSize="30dp" />


    </GridLayout>

</LinearLayout>
