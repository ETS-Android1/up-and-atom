<!-- Card view is a separate view from any activity as it is INFLATED into view on the time_alarm_fragment screen.-->

<!-- ToDo: finalise contents of alarm card and implement functionality -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="5dp"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alarm_name"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"

            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alarm_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alarm_name"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/alarm_time_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alarm_memo"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alarm_time_colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alarm_memo"
            android:layout_toRightOf="@id/alarm_time_hour"
            android:text=":"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alarm_time_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alarm_memo"
            android:layout_toRightOf="@id/alarm_time_colon"

            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alarm_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alarm_time_hour"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            android:textSize="16dp"
            android:textStyle="normal" />

        <Switch
            android:id="@+id/toggleAlarmSwitch"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>